package Mapa;

import java.awt.Image;

import javax.swing.ImageIcon;
import javax.swing.JLabel;

public abstract class Element{
	
	protected String nombre;
	
	protected int x;
	protected int y;
	protected final int width= 52;
	protected final int heigth= 52;
	
	protected Image imagen;
	protected JLabel etiqueta;
	
	public Element(String nom, int X, int Y){
		x=X;
		y=Y;
		nombre=nom;
		ImageIcon ima = new ImageIcon("Imagenes/"+nombre+".png");
		imagen= ima.getImage();
		etiqueta= new JLabel();
		etiqueta.setBounds(X,Y,width,heigth);
		etiqueta.setIcon(ima);
	}
	public void setImagen(Image ima){
		imagen= ima;
	}
	public int getX(){
		return x;
	}
	public int getY(){
		return y;
	}
	public Image getImagen(){
		return imagen;
	}
	public JLabel getEtiqueta(){
		return etiqueta;
	}
}