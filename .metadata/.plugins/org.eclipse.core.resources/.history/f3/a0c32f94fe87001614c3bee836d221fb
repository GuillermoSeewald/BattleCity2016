package Level;

import java.awt.Image;
import javax.swing.ImageIcon;

public class Level1 extends Level{
	public Level1(){
		images= new Image[2][4];
		buildImages();
	}
	public int getSpeedShot(){
		return speedShot;
	}
	
	private void buildImages(){
		ImageIcon ima = new ImageIcon("Imagenes/Jugador arriba-mov1.png");
		images[0][0]=ima.getImage();
		ima=new ImageIcon("Imagenes/Jugador arriba-mov2.png");
		images[1][0]=ima.getImage();
		ima = new ImageIcon("Imagenes/Jugador izquierda-mov1.png");
		images[0][1]=ima.getImage();
		ima = new ImageIcon("Imagenes/Jugador izquierda-mov2.png");
		images[1][1]=ima.getImage();
		ima = new ImageIcon("Imagenes/Jugador abajo-mov1.png");
		images[0][2]=ima.getImage();
		ima = new ImageIcon("Imagenes/Jugador abajo-mov2.png");
		images[1][2]=ima.getImage();
		ima = new ImageIcon("Imagenes/Jugador derecha-mov1.png");
		images[0][3]=ima.getImage();
		ima = new ImageIcon("Imagenes/Jugador derecha-mov2.png");
		images[1][3]=ima.getImage();
	}
}