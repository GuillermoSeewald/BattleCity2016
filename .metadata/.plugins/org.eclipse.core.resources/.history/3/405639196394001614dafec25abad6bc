package Mapa;

import Tanque.*;
import java.awt.Image;

import javax.swing.ImageIcon;
import javax.swing.JLabel;

public abstract class Element{
	
	protected String nombre;
	protected Map map;
	protected int posX;
	protected int posY;
	
	protected int x;
	protected int y;
	protected int width;
	protected int height;
	
	protected Image imagen;
	protected JLabel etiqueta;
	
	public Element(String nom, int X, int Y, Map map, int posx, int posy){
		this.map=map;
		posX=posx;
		posY=posy;
		x=X;
		y=Y;
		nombre=nom;
		imagen=new ImageIcon("Imagenes/"+nombre+".png").getImage();
		width=52;
		height=52;
	}
	public void setImage(Image ima){
		imagen= ima;
	}
	//X grafica
	public int getX(){
		return x;
	}
	//Y grafica
	public int getY(){
		return y;
	}
	//X de matriz
	public int getPosX(){
		return posX;
	}
	//Y de matriz
	public int getPosY(){
		return posY;
	}
	public Image getImagen(){
		return imagen;
	}
	public int getWidth(){
		return width;
	}
	public int getHeight(){
		return height;
	}
	protected abstract int kill();
	public abstract int kill(Player pla);
	public abstract int kill(Enemy ene);
	public abstract boolean collide(Player jug);
	public abstract boolean collide(Enemy ene);
}