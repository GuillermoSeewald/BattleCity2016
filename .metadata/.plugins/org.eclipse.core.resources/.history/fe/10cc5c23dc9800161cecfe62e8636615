package Graphic.Map;

import Logic.Map.Map;
import Logic.Map.Play;

import java.awt.BorderLayout;

import javax.swing.JFrame;


public class Frame_GraphicPlay extends JFrame{
	private static final long serialVersionUID = 1L;
	
	protected InformationPanel information;
	protected Play play;
	
	public Frame_GraphicPlay(){
		
		play= new Play("Mapas/Mapa 1.txt",this);
		information= new InformationPanel(play);
		setTitle("Battle City");
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setLayout(new BorderLayout());
		setSize(play.getMap().getGraphicMap().getWidth()+information.getWidth()+100,play.getMap().getGraphicMap().getHeight());
		setVisible(true);
		setLocationRelativeTo(null);
		setResizable(false);
		
		
		add(play.getMap().getGraphicMap(), BorderLayout.CENTER);
		add(information, BorderLayout.EAST);
	}
	public InformationPanel getInformationPanel(){
		return information;
	}
}