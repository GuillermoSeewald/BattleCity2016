package Logic.PowerUp;

import Logic.Tank.Player;
import Graphic.Map.GraphicElement;

public class ForceField extends GraphicElement implements Runnable{
	
	protected Player p;
	
	public ForceField(Player pla){
		p=pla;
		p.activateForceField(this);
	}
	public void run(){
		try {
			Thread.sleep(20000);
		} catch (InterruptedException e){
		}
		p.desactivateForceField();
	}
}