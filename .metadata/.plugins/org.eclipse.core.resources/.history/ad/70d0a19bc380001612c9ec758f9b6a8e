package Tanque;

import Mapa.*;

import java.awt.Image;

import javax.swing.ImageIcon;

public abstract class Character extends Element{
	protected int vida, velMovimiento, golpesQueResiste, movImage;
	protected String direccion;
	protected boolean hayDisparo;

	protected Image[][] imageColection;
	protected int dx;
	protected int dy;
	
	public Character(int v,int velM,int golpes,String nom,String dir, int x, int y){
		super(nom+" "+dir+"-mov1", x, y);
		vida=v;
		velMovimiento=velM;
		golpesQueResiste=golpes;
		direccion=dir;
		movImagen=0;
		imageColection= new Image[2][4];
	}
	
	public void asignarVida(int v){
		vida=v;
	}
	public void asignarVelocidadMovimientoo(int v){
		velMovimiento=v;
	}
	public void asignarGolpes(int g){
		golpesQueResiste=g;
	}
	public void mover(){
		x+=dx;
		y+=dy;
	}
//	public void disparar(){
//		hayDisparo=true;
//		new Disparo(direccion, this);
//	}
	public int getVidas(){
		return vida;
	}
	public int getVelMovimiento(){
		return velMovimiento;
	}
	public int getGolpes(){
		return golpesQueResiste;
	}
	public String getDireccion(){
		return direccion;
	}
	public boolean hayDisparo(){
		return hayDisparo;
	}
}