package Tanque;

import Mapa.*;

public class Shot extends Element{
	
	protected int speed, dx, dy;
	
	public Shot(String dir, int x, int y, Map map, int speed){
		super("Disparo "+dir,x, y, map);
		assignIncrementDir(dir);
	}
	public void move(){
		if((x==0)&&(dx==(-1))){
			x=0;
		}
		else{
			if((x==625)&&(dx==1)){
				x=625;
			}
			else{
				x+=dx;
			}
		}
		if((y==0)&&(dy==(-1))){
			y=0;
		}
		else{
			if((y==625)&&(dy==1)){
				y=625;
			}
			else{
				y+=dy;
			}
		}		
	}
	public int kill(){
		return 0;
	}
/*	public boolean collide(Player jug){
		
	}
	public boolean collide(Enemy ene){
		
	}
	*/
	
	private void assignIncrementDir(String dir){
		switch(dir){
		case "arriba":
			dx=0;dy=-1;
			break;
		case "abajo":
			dx=0;dy=1;
			break;
		case "izquierda":
			dx=-1;dy=0;
		case "derecha":
			dx=1;dy=0;
			break;
		}
	}
}