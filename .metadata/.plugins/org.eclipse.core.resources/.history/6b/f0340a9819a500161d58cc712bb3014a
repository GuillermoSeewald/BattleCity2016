package Logic.PowerUp;

import Logic.Map.Map;

public class freezerEnemies implements Runnable{
	
	protected Map map;
	protected boolean gameOver;
	
	public freezerEnemies(Map map, boolean g){
		this.map=map;
		gameOver=g;
	}
	public void run(){
		if(gameOver){
			map.getPlay().getPlayer().terminate();
			Thread.sleep(7000);
		}
		for(int i=0;i<map.getEnemies().length;i++){
			map.getEnemies()[i].terminate();
		}
		try {
			Thread.sleep(10000);
		}catch(InterruptedException e){
		}
		for(int i=0;i<map.getEnemies().length;i++){
			map.getEnemies()[i].initialize();
		}
	}
}