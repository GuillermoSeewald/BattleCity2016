package Tanque;

import Mapa.*;
import Shot.ShotEnemy;

import java.awt.Image;
import java.util.Random;

import javax.swing.ImageIcon;

public class ArmoredTank extends Enemy implements Runnable{
	
	private volatile boolean execute;
	
	public ArmoredTank(int x, int y, Map map, int posE, int posx, int posy){
		super(12,4,"Armored tank","abajo", x, y, map, posE, posx, posy);
		points=400;
		images= new Image[2][4];
		this.execute=true;
		haveShot=false;
		buildImages();
	}
	public void terminate(){
		this.execute=false;
	}
	public void run(){
		while(execute){
			Random r= new Random();
			int x= r.nextInt(4);
			int i=0;
			move();
			while(x>0){
				while(i<13){
					super.move();
					i++;
					try {
						Thread.sleep(100);
					}catch (InterruptedException e){
					}
				}
				x--;
			}
		}
	}
	public void enableShot(){
		haveShot=false;
	}
	public void attack(){
		if(!haveShot){
			Thread tShot;
			int[] pos=super.generatePosShot();
			ShotEnemy s= new ShotEnemy(direction,pos[0],pos[1],map,9,this,posX,posY);
			tShot= new Thread(s);
			tShot.start();
			s.addPosInShots(map.insertShot(s));
		}
	}
	private void changeImage(){
		int dir=0;
		switch (direction){
		case "arriba":
			dir=0;
			break;
		case "abajo":
			dir=2;
			break;
		case "izquierda":
			dir=1;
			break;
		case "derecha":
			dir=3;
			break;
		}
		if(movImage==0){
			movImage=1;
		}
		else{
			movImage=0;
		}
		setImage(images[movImage][dir]);
	}
	public void move(){
		Random r= new Random();
		int m= r.nextInt(16);
		switch (m){
		case 0|1|2|3: //Muevo hacia arriba
			dy=-4;dx=0;
			direction="arriba";
			break;
		case 4|5|6|7: //Muevo hacia la izquierda
			dx=-4;dy=0;
			direction="izquierda";
			break;
		case 8|9|10|11: //Muevo hacia abajo
			dy=4;dx=0;
			direction="abajo";
			break;
		case 12|13|14|15: //Muevo hacia la derecha
			dx=4;dy=0;
			direction="derecha";
			break;
		}
	}
	protected int kill(){
		map.deleteEnemy(posInEnemies);
		return points;
	}
	public int kill(Player pla){
		return 0;
	}
	public int kill(Enemy ene){
		return 0;
	}
/*	public boolean collide(Player pla){
	
	}
	public boolean collide(Enemy ene){
		
	}
	*/
	private void buildImages(){
		images[0][0]=new ImageIcon("Imagenes/Armored tank arriba-mov1.png").getImage();		
		images[1][0]=new ImageIcon("Imagenes/Armored tank arriba-mov2.png").getImage();
		images[0][1]=new ImageIcon("Imagenes/Armored tank izquierda-mov1.png").getImage();
		images[1][1]=new ImageIcon("Imagenes/Armored tank izquierda-mov2.png").getImage();
		images[0][2]=new ImageIcon("Imagenes/Armored tank abajo-mov1.png").getImage();
		images[1][2]=new ImageIcon("Imagenes/Armored tank abajo-mov2.png").getImage();
		images[0][3]=new ImageIcon("Imagenes/Armored tank derecha-mov1.png").getImage();
		images[1][3]=new ImageIcon("Imagenes/Armored tank derecha-mov2.png").getImage();
	}
}