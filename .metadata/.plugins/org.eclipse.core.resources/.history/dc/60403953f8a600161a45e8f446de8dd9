package Graphic.Tank;

import Graphic.GraphicElementWithMovement.*;
import Logic.Map.Map;
import Logic.Tank.Enemy;

public abstract class GraphicCharacter extends GraphicElementWithMovement{
	
	protected int moveImage;
	
	public GraphicCharacter(int x, int y, String n, String dir){
		super(x,y,n,dir);
		moveImage=0;
	}
	
	public int getMoveImage(){
		return moveImage;
	}
	public void setMoveImage(int x){
		moveImage=x;
	}
	
	public int[] generatePosShot(){
		int ejeX=0;
		int ejeY=0;
		switch(direction){
		case "arriba":
			ejeX=(X+(getWidth()/2))-2;
			ejeY=Y;
			break;
		case "abajo":
			ejeX=(X+(getWidth()/2))-2;
			ejeY=(Y+getWidth());
			break;
		case "izquierda":
			ejeX=(X);
			ejeY=(Y+(getWidth()/2))-2;
			break;
		case "derecha":
			ejeX=(X+getWidth());
			ejeY=(getY()+(getWidth()/2))-2;
			break;
		}
		int[] retorno=new int[2];
		retorno[0]=ejeX;
		retorno[1]=ejeY;
		return retorno;
	}
	
	//Genera una nueva posicion en la matriz del mapa de acuerdo a la siguiente posición en pixeles.
	public int getNewPos(int newPosGraph, GraphicCharacter g, int lengthMap){
		int newPos=0;
		int aux1=0;
		int aux2=52;
		boolean found=false;
		for(int i=0;(i<lengthMap-1)&&(!found);i++){
			if((newPosGraph>=aux1)&&((newPosGraph+g.getHeight())<aux2)){
				found=true;
			}
			else{
				if((newPosGraph<aux2)&&((newPosGraph+g.getHeight())>=aux2)){
					found=true;
					if((g.getDirection()=="abajo")||(g.getDirection()=="derecha")){
						newPos++;
					}
				}
				else{
					aux1=aux2;
					aux2+=52;  
					newPos++;
					}
			}
		}
		return newPos;
	}
	public boolean betweenTwoCell(int graphPos, int lengthMap){
		boolean twoCell=true;
		int aux1=0;
		int aux2=52;
		for(int i=0;(i<lengthMap)&&(twoCell);i++){
			if((graphPos>=aux1)&&((graphPos+width)<aux2)){
				twoCell=false;
			}
			else{
				aux1=aux2;
				aux2+=52;
			}
		}
		return twoCell;
	}

	
	public Enemy haveEnemyTank(Map map){
		Enemy tank=null;
		Enemy[] e= map.getEnemies();
		int newX= X+dx;
		int newY= Y+dy;
		
		for(int i=0;i<e.length;i++){
			if(e[i]!=null){
				int wE= e[i].getGraphic().getWidth();
				int hE= e[i].getGraphic().getHeight();
				int xE= e[i].getGraphic().getX();
				int yE= e[i].getGraphic().getY();
				
				if((((newX>=xE)&&(newX<=(xE+wE)))||(((newX+width)>=xE)&&((newX+width)<=(xE+wE))))&&(((newY>=yE)&&(newY<=(yE+hE)))||(((newY+height)>=yE)&&((newY+height)<=(yE+hE))))){
					tank=e[i];
				}
			}
		}		
		return tank;
	}
}