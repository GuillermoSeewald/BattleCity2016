package Logic.PowerUp;

import Logic.Tank.Player;

public class ForceField implements Runnable{
	
	protected Player p;
	
	public ForceField(Player pla){
		p=pla;
		p.activateForceField(this);
	}
	public void run(){
		
		try {
			Thread.sleep(20000);
		} catch (InterruptedException e){
		}
		p.desactivateForceField();
	}
}