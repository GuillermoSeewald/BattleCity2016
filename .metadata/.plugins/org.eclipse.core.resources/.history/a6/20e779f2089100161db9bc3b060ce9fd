package Tanque;

import Mapa.*;
import Shot.ShotEnemy;

import java.awt.Image;
import java.util.Random;

import javax.swing.ImageIcon;

public class ArmoredTank extends Enemy implements Runnable{
	
	private volatile boolean execute;
	
	public ArmoredTank(int x, int y, Map map, int posE){
		super(12,4,"Armored tank","abajo", x, y, map, posE);
		points=400;
		images= new Image[2][4];
		buildImages();
	}
	public void run(){
		this.execute=true;
		while(execute){
			moveEnemy();
			try {
				Thread.sleep(500);
			} catch (InterruptedException e){
			}
		}
	}
	public void attack(){
		int[] pos=super.generatePosShot();
		new ShotEnemy(direction,pos[0],pos[1],map,9,this);
	}
	public void moveEnemy(){
		Random r= new Random();
		int m= r.nextInt(4);
		switch (m){
		case 0: //Muevo hacia arriba
			dy=-1;dx=0;
			super.move();
			direction="arriba";
			break;
		case 1: //Muevo hacia la izquierda
			dx=-1;dy=0;
			direction="izquierda";
			break;
		case 2: //Muevo hacia abajo
			dy=1;dx=0;
			direction="abajo";
			break;
		case 3: //Muevo hacia la derecha
			dx=1;dy=0;
			direction="derecha";
			break;
		}
		super.move();
		if(movImage==0){
			movImage=1;
		}
		else{
			movImage=0;
		}
		setImage(images[movImage][m]);
	}
	protected int kill(){
		map.deleteEnemy(posEnEnemies);
		return points;
	}
	public int kill(Player pla){
		return 0;
	}
	public int kill(Enemy ene){
		return 0;
	}
/*	public boolean collide(Player jug){
	
	}
	public boolean collide(Enemy ene){
		
	}
	*/
	private void buildImages(){
		images[0][0]=new ImageIcon("Imagenes/Armored tank arriba-mov1.png").getImage();		
		images[1][0]=new ImageIcon("Imagenes/Armored tank arriba-mov2.png").getImage();
		images[0][1]=new ImageIcon("Imagenes/Armored tank izquierda-mov1.png").getImage();
		images[1][1]=new ImageIcon("Imagenes/Armored tank izquierda-mov2.png").getImage();
		images[0][2]=new ImageIcon("Imagenes/Armored tank abajo-mov1.png").getImage();
		images[1][2]=new ImageIcon("Imagenes/Armored tank abajo-mov2.png").getImage();
		images[0][3]=new ImageIcon("Imagenes/Armored tank derecha-mov1.png").getImage();
		images[1][3]=new ImageIcon("Imagenes/Armored tank derecha-mov2.png").getImage();
	}
}